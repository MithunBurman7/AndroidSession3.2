<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mithunburman.creditcardhelperdemo.MainActivity"
    android:background="#000000">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:text="Enter Card Balance (5)"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText9"
        android:layout_width="150dp"
        android:background="#FFFFFF"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_above="@+id/textView11"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Enter Yearly Interest Rate (%)"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText10"
        android:layout_width="150dp"
        android:background="#FFFFFF"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignLeft="@+id/editText9"
        android:layout_alignStart="@+id/editText9" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:text="Enter Minimum Payment (5)"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="150dp"
        android:background="#FFFFFF"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/editText10"
        android:layout_alignLeft="@+id/editText10"
        android:layout_alignStart="@+id/editText10" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:text="Final Card Balance(5)"
        android:textColor="#FFFFFF"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/editText11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText12"
        android:layout_width="150dp"
        android:background="#FFFFFF"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignLeft="@+id/editText11"
        android:layout_alignStart="@+id/editText11" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:text="Months Remaining"
        android:textColor="#FFFFFF"
        android:layout_alignTop="@+id/editText13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText13"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:layout_alignEnd="@+id/editText12"
        android:layout_alignRight="@+id/editText12"
        android:layout_below="@+id/editText12"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:text="Interest Paid Will Be ($)"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/editText13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editText14"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignLeft="@+id/editText13"
        android:layout_alignStart="@+id/editText13" />

    <Button
        android:id="@+id/button"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="COMPUTE"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginBottom="27dp" />
</RelativeLayout>
